<Page x:Class="dektopCS.source.PageCSTasks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dektopCS.source"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="PageCSTasks"
      Background="MidnightBlue">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Button.Background" Value="DarkOrange"/>
            <Setter Property="Button.Foreground" Value="Black"/>
            <Setter Property="Button.Margin" Value="5,5,5,5"/>
            <Setter Property="Button.FontSize" Value="18"/>
            <Setter Property="Button.Height" Value="30"/>
            <Setter Property="Button.Width" Value="350"/>
            <Setter Property="Button.HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Button.VerticalContentAlignment" Value="Center"/>
            <Setter Property="Button.HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="ListBoxItem.BorderBrush" Value="DarkOrange"/>
            <Setter Property="ListBoxItem.Margin" Value="0,5,5,0"/>
            <!--<Setter Property="ListBoxItem.Width" Value="300"/>-->
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label 
            Foreground="White"
            HorizontalContentAlignment="Center"
            FontSize="20"
            Grid.ColumnSpan="2"
            Grid.Row="0">Выберите ЧС</Label>
        <ListBox
            Margin="10,5,10,5"
            Name="lb"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            MouseLeftButtonUp="CheckTask_Click"
            TouchUp="CheckTask_TouchUp">
        </ListBox>
        <Button
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Width="70"
            Click="Back_Click"
            Grid.Column="0"
            Grid.Row="2">Назад</Button>
        <Button
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Width="150"
            Click="AddCS_Click"
            Grid.Column="1"
            Grid.Row="2">Добавить ЧС</Button>

    </Grid>
</Page>
